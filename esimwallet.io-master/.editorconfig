# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# shadcn/ui components - their source has pretty long lines
# and when we reformat it to our defaults, the diffing is hard.
# Therefore we re-set the line length to pretty long.
[src/components/ui/**.tsx]
max_line_length = 120
